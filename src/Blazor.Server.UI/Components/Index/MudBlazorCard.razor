@inherits MudComponentBase
@inject IStringLocalizer<MudBlazorCard> L
<MudElement @attributes="@UserAttributes"
            Class="@Classname"
            Style="@Style">
    <MudPaper Class="d-flex flex-column justify-space-between pa-4"
              Elevation="2"
              Style="height: 250px;">
        <div class="align-center d-flex flex-column justify-center">
            <MudIcon Class="mb-2"
                     Color="Color.Primary"
                     Icon="@Icons.Custom.Brands.MudBlazor"
                     Style="font-size: 70px" />
            <MudText Class="my-1"
                     Typo="Typo.h5">
                @L["Blazor Components"]
            </MudText>
            <MudText Class="my-1"
                     Typo="Typo.h6">
                @L["faster and easier web development"]
            </MudText>
        </div>
        <div class="d-flex justify-end">

            <MudButton Color="Color.Primary"
                       Link="https://mudblazor.com"
                       Variant="Variant.Filled"
                       Size="Size.Small">
                @L["more"] 
            </MudButton>
        </div>
    </MudPaper>
</MudElement>
