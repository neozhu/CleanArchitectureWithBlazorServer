  "DashboardSettings": {
    "Version": "4.3.2",
    "App": "Blazor",
    "AppName": "Blazor Dashboard",
    "AppFlavor": "Blazor .NET 6.0",
    "AppFlavorSubscript": ".NET 6.0",
