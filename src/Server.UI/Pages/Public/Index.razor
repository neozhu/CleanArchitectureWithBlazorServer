	<!-- Technology Stack Section -->
	<div style="background: rgba(var(--mud-palette-surface-rgb), 0.05); padding: 100px 0;">
		<MudContainer MaxWidth="MaxWidth.Large">
			<h2 class="section-title">Technological Singularity</h2>
			<p class="section-subtitle">Orchestrating the most advanced stack available in 2025</p>

			<div class="tech-grid">
				<div class="tech-pill">.NET 10</div>
				<div class="tech-pill">C# 14</div>
				<div class="tech-pill">Blazor Server</div>
				<div class="tech-pill">EF Core 10</div>
				<div class="tech-pill">MudBlazor 8</div>
				<div class="tech-pill">MediatR</div>
				<div class="tech-pill">FluentValidation</div>
				<div class="tech-pill">PostgreSQL 17</div>
				<div class="tech-pill">Redis</div>
				<div class="tech-pill">Docker Compose</div>
				<div class="tech-pill">OpenTelemetry</div>
				<div class="tech-pill">Serilog</div>
			</div>
		</MudContainer>
	</div>

	<!-- Modules & Architecture Showcase -->
	<MudContainer MaxWidth="MaxWidth.Large" Class="py-16">
		<MudGrid Class="align-center">
			<MudItem xs="12" md="6">
				<h2 class="section-title" style="text-align: left;">Enterprise Modules</h2>
				<p style="color: var(--text-secondary); margin-bottom: 2rem; font-size: 1.1rem; line-height: 1.6;">
					Don't start from scratch. Our template comes packed with production-ready modules
					to jumpstart your development cycle.
				</p>

				<MudList T="string" Class="d-flex flex-column gap-3">
					@foreach (var item in new[] { "Advanced User Management", "Role-Based Access Control (RBAC)", "Audit Logging & Tracking", "File Management System", "Background Job Processing", "Multi-tenant Architecture" })
					{
						<div class="d-flex align-center">
							<MudIcon Icon="@Icons.Material.Filled.CheckCircle" style="color: var(--tech-accent); margin-right: 12px;" />
							<MudText Color="Color.Inherit" Style="color: var(--text-primary); font-weight: 500;">@item</MudText>
						</div>
					}
				</MudList>
			</MudItem>
			<MudItem xs="12" md="6" Class="d-flex justify-center">
				<!-- Abstract Code Representation -->
				<div class="glass-card pa-4" style="width: 100%; max-width: 550px; transform: rotate(1deg);">
					<div class="code-block">
						<div style="color: var(--text-secondary); margin-bottom: 8px;">// CQRS Command Handler Example</div>
						<div style="color: #c084fc;">[Authorize]</div>
						<div style="color: #38bdf8;">public async</div> <div style="color: var(--text-primary); display:inline;">Task&lt;Result&lt;int&gt;&gt;</div> <div style="color: #facc15; display:inline;">Handle</div>(CreateOrderCommand command, CancellationToken ct)
						<br />{
						<br />&nbsp;&nbsp;<div style="color: var(--text-secondary);">// Validate domain logic</div>
						<br />&nbsp;&nbsp;<div style="color: #38bdf8; display:inline;">var</div> order = Order.Create(command.CustomerId, command.Items);
						<br />
						<br />&nbsp;&nbsp;<div style="color: var(--text-secondary);">// Persist to database</div>
						<br />&nbsp;&nbsp;_context.Orders.Add(order);
						<br />&nbsp;&nbsp;<div style="color: #c084fc; display:inline;">await</div> _context.SaveChangesAsync(ct);
						<br />
						<br />&nbsp;&nbsp;<div style="color: var(--text-secondary);">// Dispatch domain events</div>
						<br />&nbsp;&nbsp;<div style="color: #c084fc; display:inline;">await</div> _mediator.Publish(<div style="color: #f472b6; display:inline;">new</div> OrderCreatedEvent(order.Id), ct);
						<br />
						<br />&nbsp;&nbsp;<div style="color: #c084fc; display:inline;">return</div> Result&lt;int&gt;.Success(order.Id);
						<br />}
					</div>
				</div>
			</MudItem>
		</MudGrid>
	</MudContainer>

	<!-- Call to Action Section -->
	<div style="background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(6, 182, 212, 0.08) 100%); padding: 100px 0;">
		<MudContainer MaxWidth="MaxWidth.Small" Class="text-center">
			<h2 class="hero-title" style="font-size: 3rem;">Ready to Deploy?</h2>
			<p class="hero-description" style="margin-bottom: 2.5rem;">
				Join the future of enterprise development today.
			</p>

			<div class="d-flex justify-center flex-column align-center gap-4">
				<MudButton Href="https://architecture.blazorserver.com"
						   Variant="Variant.Filled"
						   Color="Color.Secondary"
						   Size="Size.Large"
						   Class="btn-glow px-12 py-4 rounded-pill"
						   Style="font-weight: 700; font-size: 1.1rem;"
						   StartIcon="@Icons.Material.Filled.Login">
					Get Started Now
