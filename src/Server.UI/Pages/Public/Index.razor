				<MudCard Class="glass-card pa-8 text-center">
					<div class="feature-icon-box">
						<MudIcon Icon="@Icons.Material.Filled.Hub" Size="Size.Large" />
					</div>
					<MudText Typo="Typo.h5" Class="mb-3 font-bold" Color="Color.Inherit">Real-time Core</MudText>
					<MudText Style="color: var(--text-secondary);">
