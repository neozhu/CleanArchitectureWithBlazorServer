				</MudCard>
			</MudItem>

			<!-- Feature 3 -->
			<MudItem xs="12" sm="6" md="4">
				<MudCard Class="glass-card pa-8 text-center">
					<div class="feature-icon-box">
						<MudIcon Icon="@Icons.Material.Filled.Speed" Size="Size.Large" />
					</div>
					<MudText Typo="Typo.h5" Class="mb-3 font-bold" Color="Color.Inherit">Extreme Performance</MudText>
					<MudText Style="color: var(--text-secondary);">
						Engineered for speed with .NET 10 optimizations, compiled queries, lazy loading, and distributed Redis caching.
					</MudText>
				</MudCard>
			</MudItem>

			<!-- Feature 4 -->
			<MudItem xs="12" sm="6" md="4">
				<MudCard Class="glass-card pa-8 text-center">
					<div class="feature-icon-box">
						<MudIcon Icon="@Icons.Material.Filled.Layers" Size="Size.Large" />
					</div>
					<MudText Typo="Typo.h5" Class="mb-3 font-bold" Color="Color.Inherit">Modern UI/UX</MudText>
