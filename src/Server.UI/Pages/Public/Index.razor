					</MudText>
				</MudCard>
			</MudItem>

			<!-- Feature 5 -->
			<MudItem xs="12" sm="6" md="4">
				<MudCard Class="glass-card pa-8 text-center">
					<div class="feature-icon-box">
						<MudIcon Icon="@Icons.Material.Filled.Language" Size="Size.Large" />
					</div>
					<MudText Typo="Typo.h5" Class="mb-3 font-bold" Color="Color.Inherit">Global Scale</MudText>
