@page "/account/resetpasswordconfirmation"
@using CleanArchitecture.Blazor.Server.UI.Pages.Identity.Login
@inject IStringLocalizer<ResetPasswordConfirmation> L
<PageTitle>@L["Reset password confirmation"]</PageTitle>

<MudStack Spacing="2">
	<MudText Typo="Typo.h4" GutterBottom="true">@L["Reset password confirmation"]</MudText>
	<MudText Typo="Typo.body1">@L["Your password has been reset successfully. You may now log in with your new password."]</MudText>
	<MudButton Href="@Login.PageUrl" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large">
		@L["Go to Login"]
	</MudButton>
</MudStack>

@code {
	public const string PageUrl = "/account/resetpasswordconfirmation";
}