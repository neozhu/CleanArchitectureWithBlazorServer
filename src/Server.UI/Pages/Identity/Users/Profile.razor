@page "/user/profile"

@using CleanArchitecture.Blazor.Server.UI.Pages.Identity.Users.Components
@using CleanArchitecture.Blazor.Application.Common.Interfaces.Identity
@inject IStringLocalizer<Profile> Localizer
@inject IUserProfileState UserProfileState

<PageTitle>@_title</PageTitle>


<MudTabs Outlined="true" Position="Position.Top" Rounded="true" Border="true" Elevation="6"
         ApplyEffectsToContainer="true" Class="mt-8" PanelClass="pa-6">
    <MudTabPanel Text="@Localizer["Profile"]">
        <ProfileInformationTab />
    </MudTabPanel>

    <MudTabPanel Text="@Localizer["Change Password"]">
        <ChangePasswordTab />
    </MudTabPanel>

    <MudTabPanel Text="@Localizer["Two-Factor Authentication"]">
        <TwoFactorAuthTab />
    </MudTabPanel>

    <MudTabPanel Text="@Localizer["Org Chart"]">
        <OrgChartTab />
    </MudTabPanel>

    <MudTabPanel Text="@Localizer["Login History"]">
        <LoginHistoryTab />
    </MudTabPanel>
</MudTabs>


@code {
    private string _title => "Profile";
}
