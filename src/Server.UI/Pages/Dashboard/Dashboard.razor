                <div class="mx-n2 mb-2">
                    <MudChip T="string" Color="Color.Primary">RBMK-1000</MudChip>
                    <MudChip Color="Color.Secondary" T="string">RBMK-1500</MudChip>
                    <MudChip  Color="Color.Tertiary" T="string">RBMKP-2400</MudChip>
